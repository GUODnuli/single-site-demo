{
  "name": "curtain-showcase",
  "version": "1.0.0",
  "private": true,
  "description": "Vendure + Next.js 窗帘展示独立站",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "codegen": "npm run codegen -w apps/storefront"
  },
  "devDependencies": {
    "turbo": "^2.7.6",
    "typescript": "^5.7.3"
  },
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=20.0.0"
  }
}
