# ===========================================
# Production Environment Variables
# Copy this file to .env.production and fill in values
# ===========================================

# Database
DB_NAME=vendure
DB_USERNAME=vendure
DB_PASSWORD=<GENERATE_STRONG_PASSWORD>

# Vendure Server
COOKIE_SECRET=<GENERATE_32_CHAR_RANDOM_STRING>
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PASSWORD=<GENERATE_STRONG_PASSWORD>

# Public URLs (replace with your domain)
PUBLIC_VENDURE_URL=https://your-domain.com
PUBLIC_SITE_URL=https://your-domain.com

# Email Notifications (optional)
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@your-domain.com
EMAIL_NOTIFY_TO=admin@your-domain.com

# Analytics (optional)
GA_MEASUREMENT_ID=

# ===========================================
# Generate secure passwords with:
# openssl rand -base64 32
# ===========================================
